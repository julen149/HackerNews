<% @title="Hacker News" %>

<html lang="en" op="news">
  <body>
      <center>
      <table id="hnmain" border="0" cellpadding="0" cellspacing="0" width="85%" bgcolor="#f6f6ef">
        <tr>
          <td bgcolor="#ff6600" style="align-items:flex-end">
            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="padding:2px">
              <tr>
                <td style="width:18px;padding-right:4px">
                  <a href="/">
                    <img src="https://news.ycombinator.com/y18.gif" alt="" width="18" height="21" class="d-inline-block align-text-top" style="border:1px white solid;">
                  </a>              
                </td>
                <td style="line-height:12pt; height:10px;">
                  <span class="pagetop">
                    <b class="hnname">
                      <a href="/" style="color:black;text-decoration:none">Hacker News</a>
                    </b>
                    |
                    <a href="/home/new" style="color:black;text-decoration:none">new</a>
                    |
                    <a href="/home/ask" style="color:black;text-decoration:none">ask</a>
                    | 
                    <a href="/contributions" style="color:black;text-decoration:none">edit_contr</a>
                    |
                    <% if not user_signed_in? %>
                      <a href="/users/sign_in" style="color:black;text-decoration:none">submit</a>
                    <% else %>
                      <a href="/contributions/new" style="color:black;text-decoration:none">submit</a>
                    <% end %>
                    |
                    <a href="/votes" style="color:black;text-decoration:none">edit_votes</a>
                    |
                    <a href="/threads" style="color:black;text-decoration:none">threads</a>
                    |
                    
                  </span>
                </td>
                <td style="text-align:right; padding-right:4px; color:black; text-decoration:none">
                  <span class="pagetop">
                    <b class="hnname">
                       <% if not user_signed_in? %>
                          <%= link_to 'Login', new_user_session_path %>
                       <% else %>
                          <a href="/users/<%= current_user.id %>" style="color:black;text-decoration:none"><%= current_user.email %></a>
                       <% end %>
                    </b>
                  </span>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr id="pagespace" title="" style="height:10px"></tr>
        <tr>
          <td>
            <table border="0" cellpadding="0" cellspacing="0" class="itemlist">
        </table>
