<% content_for :title, 'Hacker News' %>

<table>
  <%= render 'postD' %>
  <% if user_signed_in? %>
      <tr>
        <td colspan="2"></td>
        <td>
          <%= form_for(@discuss) do |f| %>
              <%= f.hidden_field :parent_id, value: @discuss.parent_id %>
              <%= f.hidden_field :user_id, value: @discuss.user_id %>
              <%= f.hidden_field :contr_type, value: @discuss.contr_type %>
              <%= f.text_area :content, cols: 60, rows: 6 %>
              <div class="actions">
                <%= f.submit 'Comment' %>
              </div>
          <% end %>
        </td>
      </tr>
  <% else %>
      <tr>
        <td colspan="2"></td>
        <td><%= link_to 'Sign in to reply', signin_path(:google) %></td>
      </tr>
  <% end %>
  </br>
  <tr>
    <% @contribution.replies.each do |comment| %>
        <%= render 'discuss_C', commentary: comment %>
        <% comment.replies.each do |reply| %>
            <td style="margin-left: 20px"><%= render 'discuss_R', reply: reply %> </td>
            <% reply.replies.each do |reply| %>
              <table style="margin-left:50px" border="0">
              <td style="margin-left: 20px"><%= render 'discuss_R', reply: reply %> </td>
              </table>
                <% reply.replies.each do |reply| %>
                  <table style="margin-left:100px" border="0">
                  <td style="margin-left: 20px"><%= render 'discuss_R', reply: reply %> </td>
                  </table>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
  </tr>
</table>