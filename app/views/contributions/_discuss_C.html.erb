<tr class="athing">
  <td colspan="3">
    <table border="0">
      <tbody>
      <tr>
        <td class="ind"></td>
        <td valign="top" class="votelinks">
          <% unless user_signed_in? and commentary.vote.any? { |v| v.user_id == current_user.id } %>
              <%= link_to '<div class="votearrow" title="upvote"></div>'.html_safe, {:controller => "votes",
                                                                                     :action => "create",
                                                                                     :vote => {
                                                                                         :contribution_id => commentary.id
                                                                                     }},
                          :method => "post" %>
          <% end %>
        </td>
        <td class="default">
          <%= commentary.user.email %>  <%= time_ago_in_words(commentary.created_at) %>
          <br>
          <span class="comment">
                  <%= commentary.content %>
          </span>
          <br>
          <font size="2">
            <%= commentary.vote.length %> votes <u><a href="reply?id=<%= commentary.id %>">reply</a></u>
          </font>
        </td>
      </tr>
      </font>
      </tbody>
    </table>
  </td>
</tr>