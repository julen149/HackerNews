<tr class="athing">
  <td></td>
  <td colspan="2">
    <table style="margin-left:50px" border="0">
      <tbody>
      <tr>
        <td class="ind"></td>
        <td valign="top" class="votelinks">
          <% unless user_signed_in? and reply.vote.any? { |v| v.user_id == current_user.id } %>
              <%= link_to '<div class="votearrow" title="upvote"></div>'.html_safe, {:controller => "votes",
                                                                                     :action => "create",
                                                                                     :vote => {
                                                                                         :contribution_id => reply.id
                                                                                     }},
                          :method => "post" %>
          <% end %>
        </td>
        <td class="default">
          <%= reply.user.email %>  <%= time_ago_in_words(reply.created_at) %>
          <br>
          <span class="comment">
                  <%= reply.content %>
          </span><br>
          <font size="2">
            <%= reply.vote.length %> votes <u><a href="/contributions/reply/<%= reply.id %>">reply</a></u>
            <% if user_signed_in? %>
            <td><%= button_to '+1', upvote_contribution_path(reply), method: :post %></td>
            <% end %>
          </font>
        </td>
      </tr>
      </tbody>
    </table>
  </td>
</tr>